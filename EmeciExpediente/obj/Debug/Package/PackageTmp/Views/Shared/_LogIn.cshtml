<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>EMECI</title>

    @Styles.Render("~/content/bootstrap.css")
    @Styles.Render("~/Content/main.css")
    
    <style>
        #contenedor-de-login { margin-top: 80px; }
        #contenedor-de-login .tarjeta-numero { width: 80px;}
    </style>

    @Scripts.Render("~/Scripts/jquery-1.10.2.min.js")
</head>
<body>
    <div class="app-wrapper">
        <div class="app-header">
            <div class="top-bar">
                <a href="#" class="menu-toggle">
                    <i class="glyphicon glyphicon-th-large"></i>
                </a>
                <ul class="list-inline">
                    <!--<li><a href="#">Ver Video de Activaci&oacute;n de Tarjetas</a></li>-->
                    <!--<li><a href="http://www.emeci.com/Manual%20Expediente.pdf">Manual</a></li>-->
                    <li><a href="#">Web EMECI</a></li>
                </ul>
            </div>
            <div class="page-header">
                <a href="http://www.emeci.com/" class="logo">
                    <img src="~/images/logo-emeci.png" alt="LOGO EMECI" />
                </a>
            </div>
        </div>
        <div class="app-container">
            <div class="col-md-4 col-md-push-4">
                <div id="contenedor-de-login" class="panel">
                    <div class="panel-heading">
                        @if (ViewContext.RouteData.Values["Action"].ToString().ToLower() == "changepassword")
                        {
                            <h2 class="panel-title">Cambiar contrase&ntilde;a</h2>
                        }
                        else
                        {
                            <h2 class="panel-title">Ingresar a expediente</h2>
                        }
                    </div>
                    <div class="panel-body">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
